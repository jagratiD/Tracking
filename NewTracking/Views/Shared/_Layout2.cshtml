<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/css/bootstrap-reset.css" rel="stylesheet" />
    <link href="~/assets/bootstrap-datepicker/css/datepicker.css" rel="stylesheet" />
    <link href="~/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/assets/jquery-multi-select/css/multi-select.css" rel="stylesheet" />

    <link href="~/assets/bootstrap-fileupload/bootstrap-fileupload.css" rel="stylesheet" />
    <link href="~/assets/css/table-responsive.css" rel="stylesheet" />
    <link href="~/assets/css/style.css" rel="stylesheet" />
    <link href="~/assets/css/style-responsive.css" rel="stylesheet" />
    <link href="~/assets/css/Custom.css" rel="stylesheet" />
    <link href="~/assets/bootstrap-datetimepicker/css/datetimepicker.css" rel="stylesheet" />
    <script src="~/assets/js/jquery-1.8.3.min.js"></script>

    <link href="http://code.jquery.com/ui/1.8.24/themes/smoothness/jquery-ui.css" type="text/css" rel="stylesheet" />
    <script src="http://code.jquery.com/ui/1.8.24/jquery-ui.min.js" type="text/javascript"></script>
    <link href="~/assets/css/jquery.timepicker.css" rel="stylesheet" />


</head>
<body class="full-width">
    <section id="container" class="">

        <header class="header white-bg">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>


                <a href="/Home/Index" class="logo">
                    <img src="~/assets/images/logo.png" style="width:90%;height:90%" />
                </a>
                <br />
                <div class="col-lg-12">
                    <div class="col-lg-8">
                        <div class="col-lg-4">

                            @Html.DropDownList("CityID", (IEnumerable<SelectListItem>)ViewBag.city, "Select City", new { @class = "form-control", @required = "required" })
                            <img src="~/assets/images/spinner.gif" style="display:none;margin-left:75px" id="loadingimage" />
                        </div>
                        <div class="col-lg-4">

                            @Html.DropDownList("Vehicle", (IEnumerable<SelectListItem>)ViewBag.Vehicle, "Select Vehicle", new { @class = "form-control", @required = "required" })
                        </div>
                        <div class="col-lg-4">

                            <input type="submit" value="Search" class="btn btn-white" onclick="GetVehiclePosition()" />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <img src="~/assets/images/spinner.gif" style="display:none;margin-left:5px" id="loadingimage1" />
                            <label> Auto Zoom</label>&nbsp;

                            <input type="checkbox" checked data-toggle="toggle" id="toggle">
                        </div>
                    </div>

                </div>
            </div>
        </header>


        <section id="main-content">
            <section class="wrapper">
                <div class="row">
                    <div class="col-lg-12">
                        <section class="panel" style="min-height:530px;">
                            <div class="panel-body profile-activity">
                                @RenderSection("featured", required: false)
                                @RenderBody()
                            </div>
                        </section>
                    </div>
                </div>
            </section>
        </section>
    </section>

    <div style="clear: both"></div>
    <footer style="background: #3c4857;" class="site-footer">
        <div class="text-center">
            2014 &copy; LOGISURE
            <a href="#" class="go-top">
                <i class="icon-angle-up"></i>
            </a>
        </div>
    </footer>


    @Scripts.Render("~/bundles/bootstrap")

    <!--Time Picker -->

    <script src="http://code.jquery.com/ui/1.8.24/jquery-ui.min.js" type="text/javascript"></script>
    <script src="~/assets/js/jquery.timepicker.min.js"></script>

    <!--End-->

    <script src="~/assets/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="~/assets/js/jquery.dcjqaccordion.2.7.js"></script>
    <script type="text/javascript" src="~/assets/js/hover-dropdown.js"></script>
    <script src="~/assets/js/jquery.scrollTo.min.js"></script>
    <script src="~/assets/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="~/assets/js/bootstrap-datepicker.js"></script>
    <script src="~/assets/bootstrap-datetimepicker/js/bootstrap-datetimepicker.js"></script>
    @*<script src="~/assets/bootstrap-timepicker/js/bootstrap-timepicker.js"></script>*@
    <script src="~/assets/js/jquery.tagsinput.js"></script>
    <script src="~/assets/jquery-multi-select/js/jquery.multi-select.js"></script>
    <script src="~/assets/jquery-multi-select/js/jquery.quicksearch.js"></script>
    <script src="~/assets/js/common-scripts.js"></script>
    <script src="~/assets/js/advanced-form-components.js"></script>
    <script type="text/javascript" src="~/assets/advanced-datatable/media/js/jquery.dataTables.js"></script>
    <script src="~/assets/bootstrap-inputmask/bootstrap-inputmask.min.js"></script>
    <script src="~/assets/bootstrap-fileupload/bootstrap-fileupload.js"></script>
    @RenderSection("scripts", required: false)


    <script src="~/assets/js/form-component.js"></script>


</body>
</html>
